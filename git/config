# vim: set filetype=gitconfig:

[user]
	name = disco-dave
	email = 1124825-Disco-Dave@users.noreply.gitlab.com

[init]
	defaultBranch = main

[fetch]
  prune = true

[pull]
  rebase = true

[push]
  autoSetupRemote = true

[rebase]
  instructionFormat = (%an <%ae>) %s

[diff]
  tool = nvimdiff

[difftool]
  prompt = true

[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[merge]
  tool = nvimmerge

[mergetool]
  prompt = true
  keepBackup = false

[mergetool "nvimmerge"]
  cmd = "nvim -f -c \"Gdiffsplit!\" \"$MERGED\""

[core]
	excludesfile = ~/.config/git/ignore
